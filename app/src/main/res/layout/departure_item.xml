<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="departure"
            type="de.hka.realtimer.model.Departure" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:paddingTop="24dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/lblDepartureTime"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="@{departure.formattedDepartureTimeString}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgRouteType"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_bus"
            app:tint="?attr/colorAccent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/lblDepartureTime"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/lblRouteName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="@{departure.routeName}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/imgRouteType"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblTripHeadsign"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="@{departure.tripHeadsign}"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/lblRouteName"
            app:layout_constraintEnd_toStartOf="@id/imgRealtimeAvailable"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgRealtimeAvailable"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_realtime_available"
            android:visibility="@{departure.realtimeAvailable ? View.VISIBLE : View.GONE}"
            app:tint="@color/color_primary_600"
            app:layout_constraintStart_toEndOf="@id/lblTripHeadsign"
            app:layout_constraintEnd_toStartOf="@id/lblPlatformCode"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/lblPlatformCode"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="@{@string/departure_platform_code(departure.platformCode)}"
            android:textAlignment="viewEnd"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgRealtimeAvailable"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>